# EditorConfig helps maintain consistent coding styles for multiple developers working on the same project.
# See https://EditorConfig.org for details

root = true

# Unix shell scripts (Bash, sh)
[*.sh]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Bash binaries with no extension (heuristic: shebang line)
[**]
# Applies to all files; overridden below for known types
trim_trailing_whitespace = true
insert_final_newline = true

# YAML files
[*.yml]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true